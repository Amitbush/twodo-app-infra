{
  "title": "Pods Health Monitoring",
  "uid": "pods-health",
  "panels": [
    {
      "title": "CPU Usage per Pod",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "sum(node_namespace_pod_container:container_cpu_usage_seconds_total:sum_irate{namespace=\"default\"}) by (pod)",
          "legendFormat": "{{pod}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "cores" } }
    },
    {
      "title": "Memory Usage per Pod",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "sum(container_memory_working_set_bytes{namespace=\"default\", container!=\"\"}) by (pod) / 1024 / 1024",
          "legendFormat": "{{pod}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "decbytes" } }
    }
  ],
  "schemaVersion": 38,
  "style": "dark"
}